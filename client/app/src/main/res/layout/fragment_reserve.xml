<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    tools:context=".ui.reserve.ReserveFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/text_reserve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textAlignment="center"
                android:textSize="34sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/text_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/reserve_people"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/reserve_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="2"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/reserve_name"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/reserve_name"
                tools:ignore="MissingConstraints" />


            <EditText
                android:id="@+id/reserve_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mikko Mallikas"
                android:textAlignment="center"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/text_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/reserve_phoneNumber"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/reserve_phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="123-1231233"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/ButtonSendFeedBack"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/reserve_phoneNumber"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/reserve_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="13.00-14.00"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/ButtonSendFeedBack"
                tools:ignore="MissingConstraints" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/datePickerTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Picked date"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </LinearLayout>
            <Button
                android:id="@+id/homeDelivery"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="HOMEDELLLV"
                tools:ignore="MissingConstraints" />
            <Button
                android:id="@+id/datePickerButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Choose a day"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/ButtonSendFeedback"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="SUBMIT"
                tools:ignore="MissingConstraints" />

        </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>